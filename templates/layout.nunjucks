<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>
      {% block title %}
        {{ name }}
      {% endblock %}
    </title>

    <meta name="author" content="{{ owner }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="LjoyQzPO6GNPYkjT8aMpI_vsxY7N2iW3Jqet5mkPveY">

    {% block pagedescription %}
    {% endblock %}

    {% if (mode == 'development') %}
      <link rel="stylesheet" href="/js/libs/pure/pure-min.css">
      <link rel="stylesheet" href="/js/libs/pure/grids-responsive.css">
      <link rel="stylesheet" href="/css/highlight.css">
      <link rel="stylesheet" href="/css/site.css">
    {% endif %}

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  </head>
  <body>
    <div id="layout" class="pure-g">
      <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header"><img src="https://1.gravatar.com/avatar/6fbcd51cb382d04eb0ba1b7e6e9dd108?d=https%3A%2F%2Fidenticons.github.com%2F4f3f829c99972f89b41aff400c48b794.png&amp;s=125" height="125" width="125" alt="{{owner }}" class="me">
          <h1 class="brand-title"><a href="/">{{ owner }}</a></h1>
          <h2 class="brand-tagline">Front-End Engineer</h2>
          <nav>
            <ul class="nav-list">
              {% for item in menu %}
                <li class="nav-item">
                  <a href="{{ item.url }}" title="{{ item.description }}" class="pure-button">
                    {{ item.name }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
      <div id="main" class="content pure-u-1 pure-u-md-3-4">
        {% block main %}{% endblock %}
        <div class="footer">
          <div class="pure-menu pure-menu-horizontal pure-menu-open">
            <ul>
              <li><a href="/about">About</a></li>
              {% for item in social %}
                <li><a href="{{ item.url }}">{{ item.name }}</a></li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>

    {% if (mode == 'development') %}
      <script data-main="/js/main" src="/js/libs/requirejs/require.js"></script>
    {% else %}
      <script async src="/js/main.js"></script>
    {% endif %}
  </body>
</html>