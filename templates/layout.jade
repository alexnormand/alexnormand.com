!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name

      meta(name='author', content=locals.owner)
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      meta(
        name='google-site-verification' 
        content='LjoyQzPO6GNPYkjT8aMpI_vsxY7N2iW3Jqet5mkPveY'
      )
      block page-description

      link(rel='stylesheet', href='/css/site.css')
      link(
        href='http://fonts.googleapis.com/css?family=Inconsolata|Droid+Sans',
        rel='stylesheet',
        type='text/css'
      )
      link(rel='shortcut icon',href='/favicon.ico')
      link(rel='apple-touch-icon', href='/apple-touch-icon.png')
      link(
        rel='alternate', 
        href=locals.url+'/feed.xml', 
        type='application/rss+xml', 
        title=locals.description
      )
     
      //if lt IE 9
        script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
        script(defer=true, src='js/libs/respond.min.js')

  body
    #container
      #main(role='main')
        header.banner.clearfix
          block header
            h1
              a(href='/') #{locals.owner}
            h3 alexnormand.com
        //- mobile friendly menu
        select.main_nav
          for item in locals.menu
            option(value=item.url) #{item.name}
        #mainmain
          //- Desktop Menu
          nav.main_nav
            ul
              for item in locals.menu
                li
                  a(href=item.url, title=item.description) #{item.name}
          section.content
            block main                                                  
    footer
      | Powered By 
      a(href='http://jnordberg.github.com/wintersmith/') Wintersmith 
      & 
      a(
        href='http://code.google.com/appengine/',
        title='Google App Engine'
      )
        span#appengine Google App Engine

    - if (locals.mode == 'development')
      script(
        data-main='/js/main',
        src='/js/libs/require/require.js'
      )  
