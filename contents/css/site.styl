  a
    position: relative
    color: #333
    padding-left: 5px
    transition: top 0.2s ease-in
    text-decoration: none
    vertical-align: super

    &:hover, &:active
      top: 1px


.section
  margin: 50px auto
  margin-bottom: 0

footer
  text-align: center
  padding: 20px

  a
    padding: 0 5px


.content
  p
    a:hover
      text-decoration: underline

  article
    line-height: 1.625

   h1
    font-size: 2.15em
    a
      color: #333

  p
    font-size: 18px
    line-height: 33px


hr
  background-color: #ccc
  border: 0
  height: 1px
  margin-bottom: 1.625em


#appengine
  display: inline-block
  vertical-align: bottom
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  width: 35px
  height: 27px
  background-repeat: no-repeat
  background-image: url(unquote('data:image/png;base64,'))

  &:hover
    animation-name: appengineTumble
    animation-duration: 2s
    animation-fill-mode: both
    animation-timing-function: ease

.blog_excerpt
  padding: 15px 0 24px


  .read-more
    font-size: inherit
    text-align: right


.blog_excerpt h3,
h1.title
  // font-size: 24px
  //border-bottom: 1px solid #DEDEDE
  margin: 15px auto 0 auto

.blog_excerpt h3
  border-bottom: 1px solid #DEDEDE

  a
    color: #333

.blog_excerpt h3
  margin-bottom: 0
  font-size: 100%



