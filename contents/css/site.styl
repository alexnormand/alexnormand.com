@import "nib"

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font-family: 'Lora', Georgia
  color: #333
  border-top: 5px solid #9E084A
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

a
  color: #9E084A
  text-decoration: none

a:hover
  text-decoration: underline

a.internal
    color: #333
    text-decoration: none
    font-size: 20px
    transition: color .3s ease-in-out

    &:hover
      color: #9E084A
      text-decoration: none

ul
  list-style-type: square


header.banner
  font-family: 'Raleway'
  margin-top : 20px

  nav
    float: right
    display: block

  ul
    list-style-type: none

  li
    display: inline
    padding: 5px
    margin-left: 25px

  h1
    line-height: 30px
    a
      font-size: 45px

@import "prettify"
@import "animate"

.center
  max-width: 800px
  margin: 0 auto
  margin-top: 20px

.cf:before,
.cf:after
  content: " "
  display: table

.cf:after
  clear: both

.me
  position: absolute
  left: -175px
  top: 0

.me img
  border-radius: 50%
  box-shadow: 0 0 0 2px #FFF

  &:hover
    animation-name: tumbleMe
    animation-duration: 1.25s
    animation-fill-mode: both
    animation-timing-function: ease

.social
  font-family: 'Raleway'
  padding: 0
  padding-left: 10px

  li
    display: block
    padding-bottom: 3px

  i
    display: inline-block
    background-repeat: no-repeat
    background-size: 25px
    width: 25px
    height: 25px

