@import "nib"

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font-family: 'Lora', Georgia
  color: #333
  border-top: 5px solid #9E084A
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

a
  color: #9E084A
  text-decoration: none

a:hover
  text-decoration: underline

a.internal
    color: #333
    text-decoration: none
    font-size: 20px
    transition: color .3s ease-in-out

    &:hover
      color: #9E084A
      text-decoration: none

ul
  list-style-type: square


header.banner
  font-family: 'Raleway'
  margin-top : 20px

  nav
    float: right
    display: block

  ul
    list-style-type: none

  li
    display: inline
    padding: 5px
    margin-left: 25px

  h1
    line-height: 30px
    a
      font-size: 45px

@import "highlight"
@import "animate"

.center
  max-width: 800px
  margin: 0 auto
  margin-top: 20px

.cf:before,
.cf:after
  content: " "
  display: table

.cf:after
  clear: both

.me
  position: absolute
  left: -175px
  top: 0

.me img
  border-radius: 50%
  box-shadow: 0 0 0 2px #FFF

  &:hover
    animation-name: tumbleMe
    animation-duration: 1.25s
    animation-fill-mode: both
    animation-timing-function: ease

.social
  font-family: 'Raleway'
  padding: 0
  padding-left: 10px

  li
    display: block
    padding-bottom: 3px
    cursor: pointer

  i
    display: inline-block
    background-repeat: no-repeat
    background-size: 25px
    width: 25px
    height: 25px

  .github
    background-image: url('/img/github.svg');
  .twitter
    background-image: url('/img/twitter.svg');
  .linkedin
    background-image: url('/img/linkedin.svg');
  .mail
    background-image: url('/img/mail.svg');

  a
    position: relative
    color: #333
    padding-left: 5px
    transition: top 0.2s ease-in
    text-decoration: none
    vertical-align: super

    &:hover, &:active
      top: 1px


.section
  margin: 50px auto
  margin-bottom: 0

footer
  text-align: center
  padding: 20px

  a
    padding: 0 5px


.content
  p
    a:hover
      text-decoration: underline

  article
    line-height: 1.625

   h1
    font-size: 2.15em
    a
      color: #333

  p
    font-size: 18px
    line-height: 33px


hr
  background-color: #ccc
  border: 0
  height: 1px
  margin-bottom: 1.625em


#appengine
  display: inline-block
  vertical-align: bottom
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  width: 35px
  height: 27px
  background-repeat: no-repeat
  background-image: url(unquote('data:image/png;base64,'))

  &:hover
    animation-name: appengineTumble
    animation-duration: 2s
    animation-fill-mode: both
    animation-timing-function: ease

.blog_excerpt
  padding: 15px 0 24px


  .read-more
    font-size: inherit
    text-align: right


.blog_excerpt h3,
h1.title
  // font-size: 24px
  //border-bottom: 1px solid #DEDEDE
  margin: 15px auto 0 auto

.blog_excerpt h3
  border-bottom: 1px solid #DEDEDE

  a
    color: #333

.blog_excerpt h3
  margin-bottom: 0
  font-size: 100%



/* Content */

section.content > article.post header
  margin-bottom: 25px

article.post
  h2, h3
    margin: 30px 0 0 0
    color: #222
    border-bottom: 1px solid #DEDEDE

