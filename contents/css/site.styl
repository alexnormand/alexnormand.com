h1 a:hover, h2 a:hover, h3 a:hover
  text-decoration: none


/*===== CUSTOM CSS =====*/
#main
  max-width: 720px
  margin: 0 auto
  position: relative

pre
  //display: block
  font-family: monospace
  font-size: 1.1em
  font-weight: bold
  line-height: 1.2em
  overflow-x: auto
  overflow-y: hidden

.archive
  ul
    list-style: none
    margin: 0
    padding: 5px 20px

  .year
    margin-top: 10px

    ul
      margin: 0

::selection
  color: #ddd
  background: #9E084A

::-moz-selection
  color: #ddd
  background: #9E084A


/*===============
   MEDIA QUERIES
  ===============*/

@media only screen and (max-width: 1150px) {
  .me {
    position: static;
  }

  .me img {
      width: inherit;
      float: left;
    }

  .social {
    padding: 15px;
    margin: 10px;
    float: left;
  }
}



@media only screen and (max-width: 800px) {
    #main, img {
      width: 95%;
    }

    header.banner {
      text-align: center;
    }

    header.banner nav {
      float: none;
    }

}
